<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/SplashFragment">

    <fragment
        android:id="@+id/SplashFragment"
        android:name="dev.fizcode.tokopaerbe_xml.ui.splashscreen.SplashFragment"
        android:label="@string/splash_fragment_label"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/action_SplashFragment_to_OnBoardingFragment"
            app:destination="@id/OnBoardingFragment" />
        <action
            android:id="@+id/action_SplashFragment_to_signinFragment"
            app:destination="@id/signinFragment" />
    </fragment>

    <fragment
        android:id="@+id/OnBoardingFragment"
        android:name="dev.fizcode.tokopaerbe_xml.ui.onboarding.OnBoardingFragment"
        android:label="@string/onboard_fragment_label"
        tools:layout="@layout/fragment_onboarding">
        <action
            android:id="@+id/action_OnBoardingFragment_to_signinFragment"
            app:destination="@id/signinFragment" />
        <action
            android:id="@+id/action_OnBoardingFragment_to_signupFragment"
            app:destination="@id/signupFragment" />
    </fragment>
    <fragment
        android:id="@+id/signinFragment"
        android:name="dev.fizcode.tokopaerbe_xml.ui.auth.signin.SigninFragment"
        android:label="fragment_signin"
        tools:layout="@layout/fragment_signin" />
    <fragment
        android:id="@+id/signupFragment"
        android:name="dev.fizcode.tokopaerbe_xml.ui.auth.signup.SignupFragment"
        android:label="fragment_signup"
        tools:layout="@layout/fragment_signup" />
</navigation>